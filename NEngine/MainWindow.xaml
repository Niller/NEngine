<Window x:Class="NEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NEngine"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="960">

        <DockPanel>
        <Image DockPanel.Dock="Left" x:Name="FrontBuffer"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="640" MinHeight="480"/>
            <StackPanel  DockPanel.Dock="Right" MinWidth="200">
                <Button Background="Blue" Content="1" />
                <Button Background="White" Content="2" />
                <Button Background="Red" Content="3" />
            </StackPanel>
        <TreeView DockPanel.Dock="Right" Background="Aquamarine" >
            <TextBox>Objects</TextBox>
            <TreeViewItem Header="Root">
                <TreeViewItem Header="Camera" />
                <TreeViewItem Header="Cube" />
            </TreeViewItem>
        </TreeView>
        
    </DockPanel>
        
       
</Window>
